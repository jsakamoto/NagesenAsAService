@model NagesenAsAService.Models.Room
<span class="room-number">Room #@Model.RoomNumber</span>
<span class="room-url">@Model.ShortUrl</span>
<a id="qr-code-icon" class="qr-code-icon"></a>

<div id="share-box-container">

    <div id="share-box-mask">
    </div>

    <div id="share-box">
        <div class="header">
            <span class="room-url">@Model.ShortUrl</span>
            <input type="button" value="Tweet" id="buttonTweet" />
        </div>
        <img src="@($"/api/rooms/{Model.RoomNumber}/qrcode")" alt="@Model.ShortUrl" class="qr-code" />
    </div>

</div>
