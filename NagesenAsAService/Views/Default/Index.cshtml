@section head {
    @Styles.Render("~/content/index-css")
}
<div class="home-page">

    <div class="app-description">
        @Localize.appDescription
    </div>

    <div ng-app="app" ng-controller="indexController as ctrl">
        <p>
            @Localize.EnterRoomNumber
        </p>
        <p>
            <input type="number" value="" autofocus required class="room-number" ng-model="roomNumber" />
        </p>
        <p>
            <a ng-href="/Room/{{roomNumber}}" ng-class="'btn btn-primary ' + (roomNumber.toString().length != 4 ? 'disabled' : '')">
                @Localize.Enter
            </a>
        </p>
    </div>

    <p>
        <div>
            <a href="@Url.Action("CreateNewRoom")">@Localize.OrCreateNewRoom</a>
        </div>
        <div class="warning-of-expiration">
            @Localize.TheRoomWillExpireAfter7days
        </div>
    </p>
</div>

<footer>
    <div class="social-buttons">
        <div id="fb-root"></div>
        <div class="fb-like" data-href="http://naas.azurewebsites.net/" data-width="10" data-layout="button_count" data-action="like" data-show-faces="false" data-share="true"></div>
        <script defer async src="//connect.facebook.net/ja_JP/sdk.js#xfbml=1&version=v2.3" id="facebook-jssdk"></script>

        <a href="https://twitter.com/share" class="twitter-share-button" data-text="投げ銭BOX as a Service">Tweet</a>
        <script defer async src="//platform.twitter.com/widgets.js" id="twitter-wjs"></script>
    </div>
    <p class="special-thanks">
        Special thanks to 石澤 大,
        <a href="http://ohotech.info/" target="_blank">Ohotech community</a>,
        <a href="http://twitter.com/tututen" target="_blank">@@tututen</a>
        and his friends!
    </p>
    <p class="powered-by">
        <a href="https://code.google.com/p/box2dweb/" target="_blank" class="box2dweb">Box2DWeb</a>
        | <a href="http://html2canvas.hertzen.com/" target="_blank" class="html2canvas">html2canvas</a>
