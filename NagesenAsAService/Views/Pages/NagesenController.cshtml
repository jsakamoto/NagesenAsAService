@model NagesenAsAService.Models.Room
@{
    ViewBag.Title = "Controller";
    var room = Model;
}
@section head {
    <link href="~/styles/nagesenController.min.css" rel="stylesheet" />
}
@section headerLeft {
    <a href="/" class="go-home"></a>
}
@section headerRight{
    <partial name="_ShareBox" model="room" />
}

<div id="controller-holder">

    <div id="session-title">
        <!-- ctrl.title -->
    </div>

    <div id="controller">
        <div id="coins-container" class="deny-dis-coin">
            <div id="like-coin" class="coin">
                <img id="like-coin-image" class="img-throwing" src="~/images/like-coin.png" />
                <div class="score"><span id="count-of-like">0</span> Yen</div>
            </div>
            <div id="dis-coin" class="coin">
                <img id="dis-coin-image" class="img-throwing" src="~/images/dis-coin.png">
                <div class="score"><span id="count-of-dis">0</span> Dis</div>
            </div>
        </div>
        <div id="buttons">
            <input type="button" value="Tweet" id="tweet-score-button" class="button tweet" />
        </div>
    </div>
</div>

@section scripts {
    <script src="~/scripts/signalr.js"></script>
    <script src="~/scripts/urlService.js"></script>
    <script src="~/scripts/tweetService.js"></script>
    <script src="~/scripts/hubConnService.js"></script>
    <script src="~/scripts/sharedBoxController.js"></script>
    <script src="~/scripts/nagesenController.js"></script>
}
